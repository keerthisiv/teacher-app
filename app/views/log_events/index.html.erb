<p id="notice"><%= notice %></p>

<h1><%= "Welcome #{current_teacher.email}" %></h1>

<table>
  <thead>
    <tr>
      <th>Event time</th>
      <th>Description</th>
      <th>Event type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @log_events.each do |log_event| %>
      <tr>
        <td><%= format_event_time(log_event.event_time) %></td>
        <td><%= log_event.description %></td>
        <td><%= log_event.event_type %></td>
        <td><%= link_to 'Show', log_event %></td>
        <td><%= link_to 'Edit', edit_log_event_path(log_event) %></td>
        <td><%= link_to 'Destroy', log_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log Event', new_log_event_path %>
